<% if @answer.valid? %>
  <% if remotipart_submitted? %>
    $("div#answer-id-<%= @answer.id %>").html(
      '<%= j "#{render partial: @answer, locals: { answer: @answer }}" %>'
      );
  <% else %>
    $("div#answer-id-<%= @answer.id %>").html(
      '<%= j render partial: @answer, locals: { answer: @answer } %>'
    );
  <% end %>
<% else %>
  $('<%= j render 'answers/validation_errors' %>').insertBefore($('.edit-answer-form form'));
<% end %>