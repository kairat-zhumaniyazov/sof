div class = "question question#{question.id}"

  .votes
    .count
      = question.try(:votes_value) && !question.votes_value.nil? ? question.votes_value : 0
    div
      | votes
  .answers
    .count
      = question.answers_count
    div
      | answers

  - cache [question, :question_list_item]
    .summary
      h4
        = link_to question.title, question_path(question)

  = render 'shared/author_info', object: question
